{
	"name": "broker",
	"version": "1.0.14",
	"description": "A broker service for Santech Rwanda",
	"author": "Bikorimana Saveur",
	"repository": "santechrwanda/broker/backend",
	"main": "index.ts",
	"private": true,
	"scripts": {
		"build": "tsc && tsup",
		"start:dev": "node --import=tsx --watch src/index.ts",
		"start:prod": "pnpm build && node dist/index.js",
		"check": "biome check --write",
		"test": "vitest run",
		"test:cov": "vitest run --coverage"
	},
	"dependencies": {
		"@asteasolutions/zod-to-openapi": "7.3.4",
		"bcryptjs": "^3.0.2",
		"cookie-parser": "^1.4.7",
		"cors": "2.8.5",
		"dotenv": "^16.6.1",
		"envalid": "^8.1.0",
		"express": "5.1.0",
		"express-rate-limit": "7.5.1",
		"helmet": "8.1.0",
		"http-status-codes": "2.3.0",
		"jsonwebtoken": "^9.0.2",
		"multer": "^2.0.2",
		"mysql2": "^3.14.2",
		"nodemailer": "^7.0.5",
		"passport": "^0.7.0",
		"passport-google-oauth20": "^2.0.0",
		"passport-jwt": "^4.0.1",
		"pino": "9.7.0",
		"pino-http": "10.5.0",
		"sequelize": "^6.37.7",
		"swagger-ui-express": "5.0.1",
		"zod": "3.25.76"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.1",
		"@types/cookie-parser": "^1.4.9",
		"@types/cors": "2.8.19",
		"@types/express": "5.0.3",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/multer": "^2.0.0",
		"@types/nodemailer": "^6.4.17",
		"@types/passport": "^1.0.17",
		"@types/passport-google-oauth20": "^2.0.16",
		"@types/passport-jwt": "^4.0.1",
		"@types/supertest": "6.0.3",
		"@types/swagger-ui-express": "4.1.8",
		"@vitest/coverage-v8": "3.2.4",
		"pino-pretty": "13.0.0",
		"supertest": "7.1.3",
		"tsup": "8.5.0",
		"tsx": "4.20.3",
		"typescript": "5.8.3",
		"vite-tsconfig-paths": "5.1.4",
		"vitest": "3.2.4"
	},
	"tsup": {
		"entry": [
			"src/index.ts"
		],
		"outDir": "dist",
		"format": [
			"esm",
			"cjs"
		],
		"target": "es2020",
		"sourcemap": true,
		"clean": true,
		"dts": true,
		"splitting": false,
		"skipNodeModulesBundle": true
	},
	"packageManager": "pnpm@10.13.1"
}
